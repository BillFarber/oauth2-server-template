# Environment configuration for OAuth2 Server
# Copy this file to .env and modify as needed

# Hydra Configuration
SECRETS_SYSTEM=this_needs_to_be_the_same_always_and_also_very_$3cuR3-._
SECRETS_COOKIE=this_needs_to_be_the_same_always_and_also_very_$3cuR3-._

# Database Configuration (choose one)
# SQLite (for development)
DSN=sqlite:///var/lib/sqlite/db.sqlite?_fk=true

# PostgreSQL (for production)
# DSN=postgres://hydra:secret@postgres:5432/hydra?sslmode=disable

# URLs Configuration
URLS_SELF_ISSUER=http://localhost:4444/
URLS_CONSENT=http://localhost:3000/consent
URLS_LOGIN=http://localhost:3000/login
URLS_LOGOUT=http://localhost:3000/logout
URLS_ERROR=http://localhost:3000/error
URLS_POST_LOGOUT_REDIRECT=http://localhost:3000/

# Logging
LOG_LEVEL=debug
LOG_LEAK_SENSITIVE_VALUES=true

# Ports
HYDRA_PUBLIC_PORT=4444
HYDRA_ADMIN_PORT=4445
CONSENT_APP_PORT=3000

# Development vs Production
ENVIRONMENT=development