# Production Environment Configuration
# Copy this file to .env for production deployment

# Hydra Configuration - CHANGE THESE IN PRODUCTION!
SECRETS_SYSTEM=CHANGE_THIS_TO_A_SECURE_32_CHAR_SECRET
SECRETS_COOKIE=CHANGE_THIS_TO_ANOTHER_SECURE_32_CHAR_SECRET

# Database Configuration
DSN=postgres://hydra:secret@postgres:5432/hydra?sslmode=disable

# URLs Configuration - UPDATE THESE FOR YOUR DOMAIN
URLS_SELF_ISSUER=https://your-domain.com/
URLS_CONSENT=https://your-app.com/consent
URLS_LOGIN=https://your-app.com/login
URLS_LOGOUT=https://your-app.com/logout
URLS_ERROR=https://your-app.com/error
URLS_POST_LOGOUT_REDIRECT=https://your-app.com/

# Logging
LOG_LEVEL=info
LOG_LEAK_SENSITIVE_VALUES=false

# Ports
HYDRA_PUBLIC_PORT=4444
HYDRA_ADMIN_PORT=4445
CONSENT_APP_PORT=3000

# Environment
ENVIRONMENT=production